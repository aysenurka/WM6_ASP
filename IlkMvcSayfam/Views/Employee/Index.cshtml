@model List<Employee>
@{
	ViewBag.Title = "Çalışanlar";
}

<table class="table table-responsive table-striped">
	<thead>
		<tr>
			<th>#</th>
			<th>Ad</th>
			<th>Soyad</th>
			<th>Doğum Tarihi</th>
			<th>Telefon</th>
			<th>Adres</th>
		</tr>
	</thead>
	<tbody>
		@for (int i = 0; i < Model.Count; i++)
		{
			var current = Model[i];
			<tr>
				<th>@(i + 1)</th>
				<td>@current.FirstName</td>
				<td>@current.LastName</td>
				<td>@current.BirthDate.Value.ToShortDateString()</td>
				<td>@current.HomePhone</td>
				<td>@current.Address</td>
				<td>
					<a href="@Url.Action("Detay","Employee", new {id=current.EmployeeID})" class="btn btn-info">
						Detay
					</a>
				</td>
				<td>
					<a href="@Url.Action("Guncelle","Employee",new { id=current.EmployeeID})" class="btn btn-warning">
						Güncelle
					</a>
				</td>
				<td>
					<a href="@Url.Action("Sil","Employee",new {id=current.EmployeeID})" class="btn btn-danger">
						Sil
					</a>
				</td>
			</tr>
		}
	</tbody>
</table>

@using (Html.BeginForm("Ekle", "Employee", FormMethod.Post, new { @class = "form-inline" }))
{
	<div class="container">
		<div class="row">
			<div class="col-md-4 col-md-offset-2">
				<h4>Ad</h4>@Html.TextBox("FirstName", "", new { @class = "form-control" })
			</div>
			<div class="col-md-4">
				<h4>Soyad</h4>@Html.TextBox("LastName", "", new { @class = "form-control" })
			</div>
		</div>
		<div class="row">
			<div class="col-md-4 col-md-offset-2">
				<h4>Doğum Tarihi</h4>@Html.TextBox("BirthDate", "", new { @class = "form-control" })
			</div>
			<br /><br />
			<input type="submit" value="Çalışan Ekle" class="btn btn-success btn-block" />
		</div>
	</div>
}

