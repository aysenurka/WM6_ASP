@model Employee
@{
    ViewBag.Title = "Guncelle";
}

<div class="container">
    <div><h2>@Html.Raw(ViewBag.Message)</h2></div>
    <div class="row">
        <div class="col-md-4">
            @using (Html.BeginForm("Guncelle", "Employee", FormMethod.Post))
            {
                @Html.HiddenFor(x => x.EmployeeID)
                <div class="form-group">
                    <label for="FirstName">First Name</label>
                    @Html.TextBoxFor(x => x.FirstName, new { @class = "form-control", placeholder = "First Name" })
                </div>
                <div class="form-group">
                    <label for="LastName">Last Name</label>
                    @Html.TextBoxFor(x => x.LastName, new { @class = "form-control", placeholder = "Last Name" })
                </div>
                <div class="form-group">
                    <label for="BirthDate">Birth Date</label>
                    @Html.TextBoxFor(x => x.BirthDate, new { @class = "form-control", placeholder = "Birth Date" })
                </div>
                <button type="submit" class="btn btn-info">Güncelle</button>
                <button type="reset" class="btn btn-warning">Temizle</button>
            }
        </div>
    </div>
</div>